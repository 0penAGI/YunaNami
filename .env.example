# ==============================================================================
# Yuna Nami v3.2 - Environment Configuration
# ==============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!
# ==============================================================================

# ------------------------------------------------------------------------------
# REQUIRED: Telegram Bot Configuration
# ------------------------------------------------------------------------------
# Get your bot token from @BotFather on Telegram
# Example: 1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Optional: Telegram API credentials (for advanced features)
# Get from https://my.telegram.org/apps
# TELEGRAM_API_ID=your_api_id
# TELEGRAM_API_HASH=your_api_hash

# ------------------------------------------------------------------------------
# Multi-Node Setup (Optional)
# ------------------------------------------------------------------------------
# Unique identifier for this bot instance in a multi-node network
# If not set, a random UUID will be generated each time
# YUMA_NODE_ID=node-primary-001

# WebSocket server for resonance synchronization
# RESONANCE_SYNC_URI=ws://hub.example.com:8765

# ------------------------------------------------------------------------------
# Reddit API Configuration (Optional but Recommended)
# ------------------------------------------------------------------------------
# Get credentials from https://www.reddit.com/prefs/apps
# Create a "script" type application
# REDDIT_CLIENT_ID=your_client_id_here
# REDDIT_CLIENT_SECRET=your_client_secret_here
# REDDIT_USER_AGENT=YumaNami/3.2 by u/your_username

# ------------------------------------------------------------------------------
# Imgur API (Optional - for additional meme sources)
# ------------------------------------------------------------------------------
# Get client ID from https://api.imgur.com/oauth2/addclient
# IMGUR_CLIENT_ID=your_imgur_client_id

# ------------------------------------------------------------------------------
# Translation Services (Optional)
# ------------------------------------------------------------------------------
# LibreTranslate API (self-hosted or public instance)
# LIBRETRANSLATE_API_URL=https://libretranslate.com
# LIBRETRANSLATE_API_KEY=your_api_key

# DeepL API (premium translation service)
# DEEPL_API_KEY=your_deepl_api_key

# ------------------------------------------------------------------------------
# Model & Memory Configuration
# ------------------------------------------------------------------------------
# Path to PyTorch model file
MODEL_PATH=yuma_micro.pt

# Path to SQLite database
DATABASE_PATH=yuma_ltm.sqlite

# Path to JSON backup file
JSON_BACKUP_PATH=yuma_data.json

# Directory for photo cache
PHOTO_CACHE_DIR=photo_cache

# Directory for Reddit meme cache
REDDIT_CACHE_DIR=reddit_cache

# ------------------------------------------------------------------------------
# Bot Behavior Configuration
# ------------------------------------------------------------------------------
# Maximum number of recent messages to keep in memory
MAX_RECENT=30

# Energy threshold for triggering responses
RESO_THRESHOLD=20

# Resonance activation threshold (0.0 - 1.0)
RESONANCE_THRESHOLD=0.42

# Context size for N-gram Markov chains
CONTEXT_SIZE=4

# Maximum Markov chain transitions per word
MAX_MARKOV_PER_WORD=50

# Maximum word energy value
MAX_WORD_ENERGY=50

# Dynamic stop-word threshold
DYNAMIC_STOP_THRESHOLD=0.03

# Auto-save interval in seconds
SAVE_INTERVAL=30

# Meme cleanup interval in seconds (6 hours = 21600)
MEME_CLEANUP_INTERVAL=21600

# ------------------------------------------------------------------------------
# Multi-Agent System Configuration
# ------------------------------------------------------------------------------
# Maximum number of agents in population
MAX_AGENTS=5

# Minimum number of agents (preserve diversity)
MIN_AGENTS=2

# Q-learning parameters
Q_LEARNING_EPSILON=0.15
Q_LEARNING_ALPHA=0.33
Q_LEARNING_GAMMA=0.85

# Agent evolution thresholds
AGENT_REPRODUCE_ENERGY=80
AGENT_DEATH_ENERGY=-20

# Mutation rate for genetic algorithm
AGENT_MUTATION_RATE=0.18

# ------------------------------------------------------------------------------
# Neural Network Configuration
# ------------------------------------------------------------------------------
# Resonance model dimensions
RESONANCE_INPUT_DIM=10
RESONANCE_HIDDEN_DIM=24
RESONANCE_ATTENTION_DIM=24
RESONANCE_EMO_DIM=4

# Training parameters
RESONANCE_LEARNING_RATE=0.002
RESONANCE_BATCH_SIZE=16
RESONANCE_MINI_EPOCHS=3

# Replay buffer size
REPLAY_BUFFER_SIZE=256

# Memory bank size for rare patterns
MEMORY_BANK_SIZE=32

# ------------------------------------------------------------------------------
# Voice Synthesis Configuration
# ------------------------------------------------------------------------------
# Language for voice synthesis (auto-detected by default)
# Options: ja (Japanese), ru (Russian), en (English), fr (French)
# VOICE_DEFAULT_LANG=ja

# Voice pitch shift range (semitones)
VOICE_PITCH_MIN=3
VOICE_PITCH_MAX=6

# Voice speed modulation range
VOICE_SPEED_MIN=1.05
VOICE_SPEED_MAX=1.15

# Voice integrity thresholds
VOICE_MIN_LENGTH_MS=1200
VOICE_MAX_LENGTH_MS=12000

# ------------------------------------------------------------------------------
# MutRes Core Configuration
# ------------------------------------------------------------------------------
# Resonance state size
MUTRES_STATE_SIZE=10

# Decay factor for resonance updates
MUTRES_DECAY=0.95

# Update interval in seconds
MUTRES_UPDATE_INTERVAL=0.12

# ------------------------------------------------------------------------------
# Reddit Fetching Configuration
# ------------------------------------------------------------------------------
# Auto-fetch interval in seconds (30 minutes = 1800)
REDDIT_AUTO_FETCH_INTERVAL=1800

# Number of memes to fetch per request
REDDIT_FETCH_LIMIT=50

# Concurrent request limit
REDDIT_CONCURRENT_LIMIT=6

# Subreddits to monitor (comma-separated)
# REDDIT_SUBREDDITS=memes,dankmemes,wholesomememes,anime_irl,memesRU

# ------------------------------------------------------------------------------
# RSS Feed Configuration
# ------------------------------------------------------------------------------
# Auto-fetch interval in seconds (1 hour = 3600)
RSS_AUTO_FETCH_INTERVAL=3600

# Items per feed to fetch
RSS_ITEMS_PER_FEED=10

# ------------------------------------------------------------------------------
# Web Search Configuration
# ------------------------------------------------------------------------------
# Enable web search feature
WEB_SEARCH_ENABLED=true

# Maximum search results per query
WEB_SEARCH_MAX_RESULTS=5

# Search timeout in seconds
WEB_SEARCH_TIMEOUT=15

# User agent for web requests
WEB_SEARCH_USER_AGENT=YumaNamiBot/3.2 (compatible)

# ------------------------------------------------------------------------------
# Logging Configuration
# ------------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=yuma.log

# Enable detailed logging for specific modules
# LOG_MARKOV=DEBUG
# LOG_AGENTS=DEBUG
# LOG_RESONANCE=DEBUG

# ------------------------------------------------------------------------------
# Performance & Resource Limits
# ------------------------------------------------------------------------------
# Maximum chain size before cleanup
MAX_CHAIN_SIZE=50000

# Device for PyTorch (auto, cpu, cuda, mps)
# TORCH_DEVICE=auto

# Number of threads for torch operations
# TORCH_NUM_THREADS=4

# ------------------------------------------------------------------------------
# Security & Rate Limiting
# ------------------------------------------------------------------------------
# Maximum message length to process
MAX_MESSAGE_LENGTH=4096

# Rate limit: max messages per user per minute
# RATE_LIMIT_MESSAGES=10
# RATE_LIMIT_PERIOD=60

# Whitelist users (comma-separated Telegram user IDs)
# WHITELIST_USERS=123456789,987654321

# Blacklist users (comma-separated Telegram user IDs)
# BLACKLIST_USERS=

# Enable content filtering
# CONTENT_FILTER_ENABLED=true

# ------------------------------------------------------------------------------
# Experimental Features (Use with caution!)
# ------------------------------------------------------------------------------
# Enable Stable Diffusion AI meme generation (requires GPU)
# ENABLE_STABLE_DIFFUSION=false
# STABLE_DIFFUSION_MODEL=CompVis/stable-diffusion-v1-4

# Enable multi-node resonance synchronization
# ENABLE_RESONANCE_SYNC=false

# Enable advanced analytics
# ENABLE_ANALYTICS=false

# ------------------------------------------------------------------------------
# Development & Debugging
# ------------------------------------------------------------------------------
# Enable debug mode (more verbose logging)
# DEBUG=false

# Enable test mode (disables auto-save)
# TEST_MODE=false

# Mock external APIs (for testing without API keys)
# MOCK_APIS=false

# Disable GPU even if available (for testing)
# DISABLE_GPU=false

# ==============================================================================
# END OF CONFIGURATION
# ==============================================================================
# 
# SECURITY NOTES:
# - Never commit your .env file to version control
# - Add .env to your .gitignore file
# - Use environment-specific .env files (.env.development, .env.production)
# - Rotate API keys regularly
# - Use strong, unique tokens
#
# For more information, see: https://github.com/0penAGI/YunaNami
# ==============================================================================
